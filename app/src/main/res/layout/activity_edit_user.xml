<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jakub.icdiet.EditFoodActivity"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="11dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:foregroundGravity="top|bottom|left|right">

        <TextView
            android:id="@+id/textViewFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:contentDescription="Name that the food is called"
            android:elevation="0dp"
            android:text="Food name:"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Food name:" />

        <EditText
            android:id="@+id/editTextFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:ems="10"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            tools:labelFor="@id/name" />

        <TextView
            android:id="@+id/textViewFoodHistamine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_row="1"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Amount of histamine:" />

        <EditText
            android:id="@+id/editTextFoodHistamine"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="1"
            android:ems="10"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textViewFoodLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:contentDescription="How healthy for you  is eating this food"
            android:text="Healthy rating:"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Healthy rating:" />

        <Button
            android:id="@+id/buttonRemove"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="30dp"
            android:layout_row="6"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:text="Remove" />

        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="bottom|left|center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_row="6"
            android:text="Edit" />

        <Spinner
            android:id="@+id/spinnerRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:spinnerMode="dialog" />

    </GridLayout>
<!--</android.support.constraint.ConstraintLayout>-->
