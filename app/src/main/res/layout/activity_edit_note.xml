<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jakub.icdiet.EditFoodActivity"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="11dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:foregroundGravity="top|bottom|left|right">

        <Spinner
            android:id="@+id/spinnerMealType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_row="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            android:text="Meal type:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:layout_row="2"
            android:text="Ingredients:"
            android:textSize="18sp" />

        <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextViewIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:text="MultiAutoCompleteTextView" />

        <Button
            android:id="@+id/buttonEditNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_row="25"
            android:text="Edit" />

        <Button
            android:id="@+id/buttonDeleteNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_row="25"
            android:text="Delete" />

        <EditText
            android:id="@+id/editTextDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:text="Date Time" />

        <TextView
            android:id="@+id/textViewWellbeing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_row="5"
            android:text="Wellbeing" />

        <EditText
            android:id="@+id/editTextWellbeing"
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="120dp"
            android:layout_marginTop="20dp"
            android:layout_row="5"
            android:ems="10"
            android:inputType="numberSigned"
            android:layoutDirection="ltr" />

    </GridLayout>

