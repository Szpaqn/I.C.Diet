<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jakub.icdiet.MainActivity">

    <Button
        android:id="@+id/buttonRecipes"
        style="@android:style/Widget.Material.Light.Button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="42dp"
        android:layout_marginTop="101dp"
        android:text="Recipies"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNotes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNotes"
        style="@android:style/Widget.Material.Button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="42dp"
        android:text="Notes"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFood"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRecipes" />

    <Button
        android:id="@+id/buttonFood"
        style="@android:style/Widget.Material.Button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="143dp"
        android:layout_marginTop="45dp"
        android:text="Food"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNotes" />

</android.support.constraint.ConstraintLayout>
